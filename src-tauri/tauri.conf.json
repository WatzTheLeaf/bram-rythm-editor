{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bram-rythm-editor",
  "version": "0.1.0",
  "identifier": "com.watztheleaf.bram-rythm-editor",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "bram-rythm-editor",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "rpm",
      "appimage",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
